<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/administrator/components/com_cinemax/models/fields">
    <fieldset name="left_fields" >
		<field name="id"
			   type="hidden"
			   label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC"
			   size="10"
			   default="0"
			   readonly="true"
			   class="readonly"
		/>


		<field name="name"
			   type="text"
			   label="Title"
			   default=""
			   required="true"
		/>


		<field name="website"
			   type="text"
			   label="Web Site"
			   default=""
		/>

		<field name="fb_address"
			   type="text"
			   label="FB. Address"
			   default=""
		/>

		<field name="hot_line"
			   type="text"
			   label="Hot Line"
			   default=""
		/>


		<field name="maximum_amount"
			   type="text"
			   label="Max Amount"
			   default=""
			   required="true"
		/>

		<field name="minimum_amount"
			   type="text"
			   label="MinAmount"
			   default=""
			   required="true"
		/>

		<field name="list_image"
			   type="media"
			   label="List Image"
			   default=""
		/>

		<field name="big_image"
			   type="media"
			   label="Cover Image"
			   default=""
		/>

		<field name="currency" type="list" label="Currency"
			   size="1" default="GEL"
		>
			<option value="GEL">
				GEL</option>
			<option value="USD">
				USD</option>
			<option value="EUR">
				EUR</option>
		</field>


	</fieldset>

	<fieldset name="right_fields" >

		<field name="description"
			   type="editor"
			   size="1"
			   label="Description"
			   default=""
		/>



	</fieldset>

</form>
